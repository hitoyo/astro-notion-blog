---
import { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'

export interface Props {
  post: Post
}

const { post } = Astro.props
---

<div class="read-more-link">
  <a href={getPostLink(post.Slug)}>Read more</a>
</div>

<style>
  .read-more-link {
    color: var(--fg);
  }
  .read-more-link a {
	font-size: 0.75rem;
	border: 1px solid #cfcfcf;
	text-align: center;
	max-width: 200px;
	margin: 20px auto;
}
.read-more-link a {
	color: #666;
	display: block;
	width: 100%;
	height: 100%;
	padding: 10px;
	box-sizing: border-box;
}
  @media (max-width: 640px) {
    .read-more-link a {
      width: 50%;
    }
  }
</style>
